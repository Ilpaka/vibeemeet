# ==================================
# Конфигурация Video Conference
# ==================================
# Скопируйте этот файл в .env и настройте

# Окружение (development / production)
ENVIRONMENT=development

# Сервер
SERVER_PORT=8081

# PostgreSQL
POSTGRES_DB=app_database
POSTGRES_USER=appuser
POSTGRES_PASSWORD=apppass123
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (ОБЯЗАТЕЛЬНО измените в production!)
JWT_ACCESS_SECRET=your-super-secret-access-key-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# LiveKit
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# ==================================
# ВАЖНО ДЛЯ ЛОКАЛЬНОЙ СЕТИ!
# ==================================
# Укажите IP адрес вашего компьютера в локальной сети
# Например: 192.168.1.100
# Это нужно для подключения с телефона!
HOST_IP=

# Nginx
NGINX_PORT=80

# Логирование
LOG_LEVEL=info

