  const { createLocalScreenTracks } = window.LiveKitClient || {};
  if (!createLocalScreenTracks) {
    throw new Error("LiveKit functions not available");
  }

  screenTrack = await createLocalScreenTracks({
    resolution: { width: 1920, height: 1080 },
