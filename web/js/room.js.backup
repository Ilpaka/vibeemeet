  appendChatMessage({
    author: "–°–∏—Å—Ç–µ–º–∞",
    text: `${participant.name || participant.identity} –ø—Ä–∏—Å–æ–µ–¥–∏–Ω–∏–ª—Å—è`,
    me: false,
  });

  // –û–±–Ω–æ–≤–ª—è–µ–º layout –ø—Ä–∏ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–∏ —É—á–∞—Å—Ç–Ω–∏–∫–∞
  updateRoomLayout();
